{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build:development -- --watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "runOptions": {
          "runOn": "folderOpen"
      },
      "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "dedicated",
          "showReuseMessage": true,
          "clear": false
      }
    }
  ]
}